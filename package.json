{
  "name": "Healthcare Insider 2025",
  "version": "1.0.0",
  "description": "Custom theme for Healthcare Insider by Promotion Agents",
  "author": "Promotion Agents",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/mcvmel/healthcareinsider2025",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcvmel/healthcareinsider2025.git"
  },
  "bugs": {
    "url": "https://github.com/mcvmel/healthcareinsider2025/issues"
  },
  "devDependencies": {
    "@wordpress/scripts": "^19.2.2",
    "dir-archiver": "^1.1.1",
    "node-sass": "^7.0.1",
    "rtlcss": "^3.5.0",
    "uglify-js": "^3.19.3"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "watch": "node-sass sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "compile:css": "node-sass sass/ -o ./ --output-style compressed",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "build:js": "node-minify --compressor uglify-js --input 'js/main.js' --output 'js/main.min.js'",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock"
  },
  "dependencies": {
    "@node-minify/cli": "^6.2.0",
    "@node-minify/uglify-js": "^6.2.0",
    "node-minify": "^3.6.0",
    "wp-cli": "^0.0.5"
  }
}
